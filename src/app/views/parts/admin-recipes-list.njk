<div class="container recipes-admin-list">   

    {% for recipe in recipes %}
        <div class="recipe-admin-card" >
            <div class="">
                <img src="https://s2.glbimg.com/XB2PCk1Vn0gnBIp7Z40bokvYblo=/620x455/e.glbimg.com/og/ed/f/original/2021/05/28/crispy-french-fries-with-ketchup-and-mayonnaise.jpg" alt="Imagem de {{recipe.title}}">
            </div>
            <div class="recipe-admin-text">
                <h1>{{recipe.title}}</h1>
                <p>por {{recipe.chef_name}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
        </div>
    {% endfor %}   

</div> 

