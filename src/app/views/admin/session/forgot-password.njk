{% extends "layout-login.njk" %}

{% block head %}
    <title>Foodfy - Recuperação de senha</title>
{% endblock %}

{% block content %}

<div class="container login-form">
    <form method="POST" action="/admin/users/forgot-password" >

        <div class="header">
            <h3>Esqueceu a senha?</h3>        
        </div>

        <div class="">
            <h3>Email</h3>
            <input type="email" name="email" value="{{user.email}}" placeholder="Digite o email cadastrado">
        </div>               
        
        <div class="login-buttons">       
            <button class="button" type="submit">Recuperar</button>             
        </div>                   

    </form>
</div>

    
{% endblock %}