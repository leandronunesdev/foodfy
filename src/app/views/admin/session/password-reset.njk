{% extends "layout-login.njk" %}

{% block head %}
    <title>Foodfy - Recuperação de senha</title>
{% endblock %}

{% block content %}

<div class="container login-form">
    <form method="POST" action="/admin/users/password-reset" >

        <div class="header">
            <h3>Nova senha</h3>        
        </div>

        <div class="">
            <h3>Email</h3>
            <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email">
        </div>    

        <div>
            <h3>Nova senha</h3>
            <input type="password" name="password" placeholder="Digite sua senha">
        </div>

        <div>
            <h3>Repetir senha</h3>
            <input type="password" name="passwordRepeat" placeholder="Digite sua senha">
        </div>

        <input type="hidden" name="token" value="{{token}}">           
        
        <div class="login-buttons">       
            <button class="button" type="submit">Nova senha</button>             
        </div>                   

    </form>
</div>

    
{% endblock %}