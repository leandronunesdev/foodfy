{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy - Chef</title>    
{% endblock %}

{% block content %}

<div class="container edit-header">
    <h1>Chef: {{chef.name}}</h1>
    <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar chef</a>
</div>
    

<div class="container">

    <div class="chef-hero">
        <div class="chef_avatar">
            <div class="">
                <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
            </div>           
        </div>
        <div class="card-text">
                <h1>{{chef.name}}</h1>            
        </div>  
        <div class="card-text">
            <p>{{chef.total_recipes}} Receitas</p>            
        </div>        
    </div>

    <div class="container title">
        <h1>Receitas</h1>
    </div>
{% include 'parts/admin-recipes-list.njk'%}

    
    {# {% for recipe in recipes %}
    <div class="card-admin">
        <div class="card-img-admin">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
        </div>
        <div class="card-text">
            <h1>{{recipe.title}}</h1>            
            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
    </div> 
    {% endfor %}  #}
</div>

{% endblock %}}