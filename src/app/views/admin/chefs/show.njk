{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy - Chef</title>    
{% endblock %}

{% block content %}

<div class="container edit-header">
    <h1>Chef: {{chef.name}}</h1>
    <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar chef</a>
</div>
    

<div class="container">

    <div class="chef-hero">
        <div class="chef_avatar">
            <div class="">
                <img src="{{chef.file.src}}" alt="Imagem de {{chef.name}}">
            </div>           
        </div>
        <div class="card-text">
                <h1>{{chef.name}}</h1>            
        </div>  
        <div class="card-text">
            <p>{{chef.total_recipes}} Receitas</p>            
        </div>        
    </div>

    <div class="container title">
        <h1>Receitas</h1>
    </div>

    {% include 'parts/admin-recipes-list.njk'%}    
    
</div>

{% endblock %}}