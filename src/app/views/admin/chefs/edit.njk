{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy - Editar</title>
{% endblock %}

{% block content %}

<div class="container chef-form">
    
    <form method="POST" action="/admin/chefs?_method=PUT" enctype="multipart/form-data">
    <div class="cards edit-header">
        <h1>Editando chef</h1>
        <div>
            <input type="hidden" name="id" value={{chef.id}}>
            <button type="submit" class="button">Salvar chef</button>
        </div>
    </div>
    
        {% include 'admin/chefs/fields.njk' %}
        
    </form>
    <form action="/admin/chefs?_method=DELETE" method="POST">
        {% if files %}
            {% for image in files %}
                <input type="hidden" name="file_id" value={{image.id}}>
            {% endfor %}
        {% endif %}
        <input type="hidden" name="id" value={{chef.id}}>
        <button type="submit" class="button delete-button">Deletar</button>
    </form>
</div>
    
{% endblock %}