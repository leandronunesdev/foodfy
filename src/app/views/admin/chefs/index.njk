{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy - Admin</title>
{% endblock %}

{% block content %}

<div class="container edit-header">
    <h1>Gerenciar chefs</h1>
    {% if isAdmin %}
        <a href="/admin/chefs/create" class="button">Novo chef</a>  
    {% endif %}
</div>

<div class="container chefs-list">   

    {% for chef in chefs %}
    <div class="chef-card">
        <div class="chef-card-img">
            <img src="{{chef.image}}" alt="Imagem de {{chef.name}}">
        </div>
        <div class="chef-card-text admin">
            <h1>{{chef.name}}</h1>  
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
        </div>
    </div> 
    {% endfor %}   

</div>
   
{% endblock %}