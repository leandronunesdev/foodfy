{% extends "layout-admin.njk" %}

{% block head %}
    <title>Foodfy - Editar Usuário</title>
{% endblock %}

{% block content %}

<div class="container chef-form">

  <form method="POST" action="/admin/users?_method=PUT">
    <div class="edit-header">
        <h1>Editar usuário</h1>
        <div>            
            <button type="submit" class="button">Salvar</button>
            <a href="/admin/users" class="button cancel-button">Cancelar</a>
        </div>
    </div>
    
    <input 
                    type="hidden" 
                    name="id" 
                    value={{user.id}}
                > 
    {% include 'admin/users/fields.njk' %}

  </form>

</div>

    
{% endblock %}